import { pgTable, serial, text, timestamp, boolean, integer } from "drizzle-orm/pg-core";

export const waitlistEntries = pgTable("waitlist_entries", {
    id: serial("id").primaryKey(),
    email: text("email").notNull(),
    name: text("name").notNull(),
    riadName: text("riad_name"),
    role: text("role"), // This will store location from the form
    status: text("status").default("pending"), // pending, contacted, approved
    createdAt: timestamp("created_at").defaultNow(),
});

export const contactMessages = pgTable("contact_messages", {
    id: serial("id").primaryKey(),
    name: text("name").notNull(),
    email: text("email").notNull(),
    phone: text("phone"),
    riadName: text("riad_name"),
    subject: text("subject").default("General Inquiry"),
    message: text("message").notNull(),
    status: text("status").default("unread"), // unread, read
    priority: boolean("priority").default(false),
    createdAt: timestamp("created_at").defaultNow(),
});

export const siteContent = pgTable("site_content", {
    id: serial("id").primaryKey(),
    key: text("key").notNull().unique(), // e.g., "hero_title", "contact_email"
    value: text("value").notNull(),
    section: text("section"), // e.g., "home", "contact"
    updatedAt: timestamp("updated_at").defaultNow(),
});

